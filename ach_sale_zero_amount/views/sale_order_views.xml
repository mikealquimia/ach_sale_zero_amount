<odoo>
  <data>

    <record model="ir.ui.view" id="ach_sale_zero_amount_form">
      <field name="name">Sale Order Zero Amount</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <xpath expr="//button[@id='action_confirm']" position="after">
          <button name="action_approve_zero_amount" string="Approve Sale Amount Zero" type="object" attrs="{'invisible': [('state', '!=', 'static')]}" groups="ach_sale_zero_amount.group_ach_sale_zero_amount_manager"/>
          <button name="action_draft" states="cancel" type="object" string="Decline" attrs="{'invisible': [('state', '!=', 'static')]}" groups="ach_sale_zero_amount.group_ach_sale_zero_amount_manager"/>
          <button name="action_cancel" states="draft,sent,sale" type="object" string="Cancel" attrs="{'invisible': [('state', '!=', 'static')]}" groups="ach_sale_zero_amount.group_ach_sale_zero_amount_manager"/>
        </xpath>
        <xpath expr="//field[@name='payment_term_id']" position="after">
          <field name="zero_amount_approval" invisible="1"/>
          <field name="zero_amount_approval_user_id" readonly="1" attrs="{'invisible': [('zero_amount_approval', '=', False)]}"/>
        </xpath>
      </field>
    </record>

  </data>
</odoo>